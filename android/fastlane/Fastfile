default_platform(:android)

platform :android do
  desc "Deploy a new beta build to Google Play"
  lane :beta do
    build_number = 1000000000 + number_of_commits()
    Dir.chdir "../.." do
      sh("flutter", "packages", "get")
      sh("flutter", "clean")
      sh("flutter", "build", "appbundle", "--release", "--bundle-sksl-path=shaders/android_sksl.json", "--build-number=#{build_number}")
    end
    upload_to_play_store(track: 'beta', aab: '../build/app/outputs/bundle/release/app.aab')
  end
end
